<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.b1nd.alimo.presentation.feature.main.home.HomeViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/white"
                app:statusBarScrim="@color/white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="match_parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        app:layout_collapseMode="parallax">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_top_logo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ALIMO"
                            android:textFontWeight="700"
                            android:textSize="20sp"
                            android:textColor="@color/Gray300"
                            android:layout_marginTop="14dp"
                            android:layout_marginStart="14dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>
                        <LinearLayout
                            android:id="@+id/layout_speaker"
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/ripple_main100_4"
                            android:clickable="true"
                            android:onClick="@{() -> vm.onClickSpeaker()}"
                            app:layout_constraintTop_toBottomOf="@id/text_top_logo"
                            app:layout_constraintStart_toStartOf="parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="7dp"
                                android:src="@drawable/ic_loud_speaker"
                                app:tint="@color/Main300" />
                            <TextView
                                android:id="@+id/text_speaker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="7dp"
                                android:text="@string/text_notice_loading"
                                android:textColor="@color/Main900"
                                android:textAllCaps="false"
                                android:textFontWeight="500"/>
                            <TextView
                                android:id="@+id/text_speaker_author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="· 테스트"
                                android:textColor="@color/Gray500"
                                android:textFontWeight="500"
                                android:visibility="gone"/>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_collapseMode="pin" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_category"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="4dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@id/layout_speaker"
                app:layout_constraintStart_toStartOf="parent"/>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_not_load"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <ImageView
                android:id="@+id/image_not_load"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="62dp"
                android:layout_marginHorizontal="67dp"
                android:src="@drawable/ic_not_load_notice"
                app:layout_constraintDimensionRatio="227:170"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/text_not_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/text_not_load_notice"
                android:textColor="@color/Gray500"
                app:layout_constraintTop_toBottomOf="@id/image_not_load"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/text_subtitle"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>